// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model UserChannel {
  id        Int       @id @default(autoincrement())
  username  String
  channel  Channel @relation(fields: [channelId], references: [id])
  channelId Int
  User      User?     @relation(fields: [userId], references: [id])
  userId    Int?

  @@unique([id])
}

model User {
  username    String
  id          Int           @id @default(autoincrement())
  password    String
  messageSent Message[]
  socketId    String
  userChannel UserChannel[]

  @@unique([username])
  @@unique([socketId])
  @@unique([id])
}

model Message {
  id        Int      @id @default(autoincrement())
  content   String
  author    User     @relation(fields: [socketId], references: [socketId])
  createdAt DateTime @default(now())
  socketId  String
  Channel   Channel? @relation(fields: [channelId], references: [id])
  channelId Int?
}

model Channel {
  id            Int          @id @default(autoincrement())
  name          String
  messages      Message[]
  creator       String
  UserChannel   UserChannel[]

  @@unique([name])
  @@unique([id])
}

