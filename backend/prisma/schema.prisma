// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  username        String
  id              Int           @id @default(autoincrement())
  password        String
  friends         String[]
  socketId        String
  channels        Channel[]     @relation("Memberships")
  messagesSent    Message[]     @relation("Author")
  messageReceived Message[]     @relation("Target")

  @@unique([username])
  @@unique([socketId])
  @@unique([id])
}

model Message {
  id             Int      @id @default(autoincrement())
  content        String
  author         User     @relation("Author", fields: [authorSocketId], references: [socketId])
  target         User     @relation("Target", fields: [targetSocketId], references: [socketId])
  createdAt      DateTime @default(now())
  targetSocketId String
  authorSocketId String
  Channel        Channel? @relation(fields: [channelId], references: [id])
  channelId      Int?
}

model Channel {
  id          Int           @id @default(autoincrement())
  name        String
  messages    Message[]
  members     User[]        @relation("Memberships")
  creator     String

  @@unique([name])
  @@unique([id])
}

