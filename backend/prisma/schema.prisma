// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model UserChannel {
  username String

}

model User {
  username       String
  id             Int       @id @default(autoincrement())
  password       String
  messageSent    Message[]
  channelJoined  Channel[] @relation("Members", references: [id])
  socketId       String

  @@unique([username])
  @@unique([socketId])
}

model Message {
  id        Int      @id @default(autoincrement())
  content   String
  author    User     @relation(fields: [socketId], references: [socketId])
  createdAt DateTime @default(now())
  socketId  String
  Channel   Channel? @relation(fields: [channelId], references: [id])
  channelId Int?
}

model Channel {
  id       Int       @id @default(autoincrement())
  name     String
  members  User[] @relation("Members", references: [id])
  messages Message[]
  creator  String

  @@unique([name])
}

